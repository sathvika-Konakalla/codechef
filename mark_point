T = int(input())
for i in range(T):
    N = int(input())
    S = input().strip()
    possible = True
    i = 0
    while i < N:
        if S[i] == '1':
            j = i
            while j < N and S[j] == '1':
                j += 1
            length = j - i
            if length < 3:
                possible = False
                break
            i = j
        else:
            i += 1

    print("Yes" if possible else "No")
